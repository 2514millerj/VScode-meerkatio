{
  "name": "meerkatio",
  "publisher": "MeerkatIO",
  "displayName": "MeerkatIO: Personal Notification Tool",
  "description": "Personal notification tool for multi-tasking software developers",
  "version": "1.4.0",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other",
    "Data Science",
    "Debuggers"
  ],
  "keywords": [
    "alert",
    "notification",
    "task",
    "debug",
    "remote work",
    "productivity",
    "slack",
    "sms",
    "email",
    "system tray",
    "push notification",
    "jupyter",
    "notebook"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "images/logo-transparent.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/2514millerj/vscode-meerkatio.git"
  },
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "MeerkatIO Notification Options",
      "properties": {
        "meerkat.token": {
          "type": "string",
          "description": "MeerkatIO Platform token for enabling Slack, SMS, and Email notifications",
          "scope": "resource"
        },
        "meerkat.meerkatNotification": {
          "type": "string",
          "description": "Configure the notification channel from the MeerkatIO Platform. Choose from ping, system, slack, sms, or email",
          "default": "ping",
          "scope": "resource",
          "enum": [
            "ping",
            "system",
            "slack",
            "sms",
            "email"
          ],
          "enumDescriptions": [
            "(default) Sound Notification",
            "System Tray Notification",
            "Slack Notification",
            "SMS Notification",
            "Email Notification"
          ]
        },
        "meerkat.enabled": {
          "type": "boolean",
          "description": "Toggle MeerkatIO notifications on and off",
          "default": true,
          "scope": "resource"
        },
        "meerkat.triggerMinDurationSeconds": {
          "type": "integer",
          "description": "The minimum duration in seconds code must run to cause an alert to be triggered. This avoids noisy alerts on short tasks.",
          "default": 30,
          "scope": "resource"
        }
      }
    },
    "viewsContainers": {
			"activitybar": [
				{
					"id": "meerkat-sidebar-view",
					"title": "MeerkatIO",
					"icon": "images/logo-transparent.png"
				}
			]
		},
		"views": {
			"meerkat-sidebar-view": [
				{
					"type": "webview",
					"id": "meerkat-sidebar",
					"name": "Home",
					"icon": "images/logo-transparent.png"
				}
			]
		},
    "resources": [
      {
        "pattern": "audio/*.mp3",
        "destination": "/audio"
      },
      {
        "pattern": "images/*.png",
        "destination": "/images"
      },
      {
        "pattern": "src/*",
        "destination": "/src"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vscode/jupyter-extension": "^1.1.1",
    "axios": "^1.6.8",
    "node-notifier": "^10.0.1",
    "play-sound": "^1.1.6"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.30.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
